<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.dz2.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment_layout">
        <action
            android:id="@+id/action_mainFragment_to_detailProductFragment2"
            app:destination="@id/detailProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailProductFragment"
        android:name="com.example.dz2.DetailProductFragment"
        android:label="DetailProductFragment"
        tools:layout="@layout/detail_product_fragment_layout">
        <argument
            android:name="detailProduct"
            app:argType="com.example.dz2.networking.Product" />
    </fragment>
</navigation>